---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
---

<Layout title="Lexiupon - Coming Soon" description="Lexiupon. Let Data Talk.">
  <div class="min-h-screen flex flex-col">
    <main class="flex-1 flex items-center justify-center px-8 md:px-12 py-16">
      <div class="w-full max-w-xl text-center">
        <!-- Logo -->
        <div class="mb-10 animate-in delay-1">
          <Logo size={120} />
        </div>

        <!-- Company Name -->
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-gray-900 mb-3 animate-in delay-2">
          Lexiupon
        </h1>

        <!-- Tagline -->
        <p class="text-lg md:text-xl font-medium tracking-wide uppercase text-gray-400 mb-8 animate-in delay-3">
          Agentic layer for your data
        </p>

        <p class="text-sm text-gray-400 mb-10 animate-in delay-4">
          Coming soon
        </p>

      </div>
    </main>

    <!-- Footer -->
    <footer class="py-6 text-center">
      <p class="text-xs text-gray-400">&copy; 2026 Lexiupon. All rights reserved.</p>
    </footer>
  </div>
</Layout>
